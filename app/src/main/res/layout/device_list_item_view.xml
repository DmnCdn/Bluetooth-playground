<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    android:backgroundTint="@color/secondary_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="4dp"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/starImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_star"
                android:visibility="gone"
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/deviceNameTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                tools:text="Samsung Galaxy S20 FE G780G"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/typo"/>

            <TextView
                android:id="@+id/deviceAddressTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="(00:00:5e:00:53:af)"
                android:singleLine="true"
                android:textSize="16sp"
                android:ellipsize="end"
                android:textColor="@color/secondary_elements"/>

        </LinearLayout>

        <Button
            android:id="@+id/searchButton"
            style="@style/Widget.App.Button"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="8dp"
            android:text="@string/connect"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
